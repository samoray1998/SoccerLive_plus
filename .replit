modules = ["flutter", "flutter-3.16.5"]

[nix]
channel = "stable-24_05"
packages = ["wget"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-hostname=0.0.0.0 --web-port=5000 --web-renderer=canvaskit"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter pub get && flutter run -d web-server --web-hostname=0.0.0.0 --web-port=5000"]

[[ports]]
localPort = 5000
externalPort = 80
